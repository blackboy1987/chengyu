.item{
    width: 90%;
    background: #fff;
    margin:24rpx auto;
    border-radius: 12rpx;
    display: flex;
    padding:24rpx;
}
.item>image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
}
.item>.right{
    border-radius: 10rpx;
    flex:2;
    color:#000;
    padding-left:32rpx;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
}
.item>.right>.title{
    font-size: 36rpx;
    font-weight: 600;
}
.item>.right>.price{
    color: #fe7771;
}
.item>.right>.price>.now{
    font-size: 36rpx;
}
.item>.right>.price>.old{
    padding-left: 24rpx;
    text-decoration:line-through;
}
.item>.right>.bottom>.info{
    font-size: 28rpx;
}
.item>.right>.bottom>.buy{
    float: right;
    background: #eb4e33;
    color: #f5dcef;
    width:160rpx;
    font-size: 24rpx;
    padding:8rpx;
    border-radius: 30rpx;
}
.bottom{
    display: flex;
    line-height: 80rpx;
    justify-content: space-around;
}
.bottom>view{
    margin-top:20rpx;
    background: #745ec0;
    color: #fffdff;
    width: 220rpx;
    text-align: center;
    border-radius: 40rpx;
}